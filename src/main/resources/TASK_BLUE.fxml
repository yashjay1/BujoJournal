<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="382.0" prefWidth="555.0" style="-fx-background-color: #8EA8C3;">
      <children>
         <VBox alignment="CENTER" layoutY="-1.0" prefHeight="383.0" prefWidth="555.0">
            <children>
               <HBox alignment="CENTER" prefHeight="53.0" prefWidth="583.0" style="-fx-background-color: #23395B;">
                  <children>
                     <Label text="TASK CREATION" textFill="#cbf7ed">
                        <font>
                           <Font name="Monospaced Bold" size="27.0" />
                        </font>
                     </Label>
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label text="Task Name" textFill="#161925">
                        <font>
                           <Font size="18.0" />
                        </font>
                     </Label>
                     <ImageView fitHeight="74.0" fitWidth="78.0" pickOnBounds="true" preserveRatio="true" />
                     <TextField fx:id="nameTextField" prefHeight="26.0" prefWidth="278.0" />
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label text="Description" textFill="#161925">
                        <font>
                           <Font size="18.0" />
                        </font>
                     </Label>
                     <ImageView fitHeight="90.0" fitWidth="83.0" pickOnBounds="true" preserveRatio="true" />
                     <TextArea fx:id="descriptionTextField" prefHeight="90.0" prefWidth="283.0" />
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label prefHeight="27.0" prefWidth="133.0" text="Day of the Week" textFill="#161925">
                        <font>
                           <Font size="18.0" />
                        </font>
                     </Label>
                     <ImageView fitHeight="67.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
                     <ComboBox fx:id="daySelector" prefHeight="38.0" prefWidth="279.0" promptText="CHOOSE DAY..." style="-fx-background-color: #CBF7ED; -fx-border-width: 5; -fx-border-color: #406E8E;">
                     </ComboBox>
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <HBox alignment="CENTER" prefHeight="67.0" prefWidth="492.0">
                        <children>
                           <Label prefHeight="27.0" prefWidth="129.0" text="Categories" textFill="#161925">
                              <font>
                                 <Font size="18.0" />
                              </font>
                           </Label>
                           <ImageView fitHeight="67.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
                           <ComboBox fx:id="categorySelector" prefHeight="38.0" prefWidth="274.0" promptText="CHOOSE CATEGORY..." style="-fx-background-color: #CBF7ED; -fx-border-width: 5; -fx-border-color: #406E8E;" />
                        </children>
                     </HBox>
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <ImageView fitHeight="69.0" fitWidth="97.0" pickOnBounds="true" preserveRatio="true" />
                  </children>
               </HBox>
               <Button fx:id="createTaskButton" mnemonicParsing="false" prefHeight="46.0" prefWidth="190.0" style="-fx-background-color: #CBF7ED; -fx-border-color: #406E8E; -fx-border-width: 5;" text="Create Task" textFill="#406e8e">
                  <font>
                     <Font name="Monospaced Bold" size="18.0" />
                  </font>
               </Button>
               <ImageView fitHeight="28.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               <HBox prefHeight="100.0" prefWidth="200.0" />
               <HBox prefHeight="100.0" prefWidth="200.0" />
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
